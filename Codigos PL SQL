DECLARE 
    X NUMBER;
BEGIN
   X:=7;
   DBMS_OUTPUT.PUT_LINE('El valor de la variable es: '||X);
END;


                                                                            //Capturar por teclado

DECLARE 
    X NUMBER:=:variable; //Fuera del localhost cambiamos por X NUMBER:=&variable;
    
    -- Ejemplo de comentario
BEGIN
   DBMS_OUTPUT.PUT_LINE('El valor de la variable es: '||X);
END;


